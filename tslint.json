{
    "defaultSeverity": "error",
    "rules": {
        "class-name": true,
        "curly": true,
        "eofline": false,
        "forin": true,
        "indent": [
            true,
            "spaces", 
            2
        ],
        "label-position": true,
        "max-line-length": [
            true,
            340
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "warn",
            "debug"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-string-literal": false,
        "no-trailing-whitespace": true,
        "no-use-before-declare": false,
        "typedef": [true, 
          "call-signature",
          "arrow-call-signature",
          "parameter",
          "arrow-parameter",
          "property-declaration",
          "variable-declaration",
          "member-variable-declaration",
          "object-destructuring",
          "array-destructuring"
      ],
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "radix": true,
        "semicolon": [true],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator"
        ]
    }
  }